<div class="container">
  <h1>Liar's Dice</h1>
  <div class="row">
    <div class="col-xs-12 col-md-8 well">
      <div id="phaser-window">
        <%= javascript_include_tag 'phaser.min.js', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'game', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'engine', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'player', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'diepool', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'die', 'data-turbolinks-track' => true %>
      </div>
    </div>
    <div class="col-xs-12 col-md-4 well" style="height: 640px;">
      <h3>Chat</h3>
      <div class="row">
        <div class="col-md-12">
          Nicu: Hi!
        </div>
        <div class="col-md-12">
          <div class="row">
            <div class="col-xs-8">
              <input type="text" id="chatInput" class="form-control" placeholder="Say something here..." required autofocus>
            </div>
            <div class="col-xs-4">
              <button class="btn btn-md btn-primary btn-block" type="submit">Send</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create a Game</h4>
      </div>
      <div class="modal-body">

        <div class="field">
          <%= form_for(:game) do |f| %>
            <%= f.label :game_name %><br />
            <%= f.text_field :game_name, autofocus: true %>
        </div>
        <p>This is a small modal.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Start Game</button>
      </div>
    </div>
  </div>
</div>
