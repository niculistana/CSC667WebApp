<% provide(:title, 'Leaderboard') %>
<div class="container">  
  <h1>Best Liars</h1>
  <div id="leaderboardBackground"> 
    <table class="table table-hover table-responsive table-bordered">
      <tr>
        <th>Player</th>
        <th>Wins</th>
        <th>Losses</th>
      </tr>
      <% User.all.order('wins DESC').each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.wins %></td>
          <td><%= user.losses %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>