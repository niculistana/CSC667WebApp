<% provide(:title, 'Leaderboard') %>

  <h1>Top 10 Best Liars</h1> 
    <div id="leaderboardBackground"> 
      <table class="table table-hover table-responsive table- bordered">
        <tr>
          <th>Player</th>
          <th>W</th>
          <th>L</th>
        </tr>
        <% User.all.order('wins DESC limit 10').each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.wins %></td>
            <td><%= user.losses %></td>
          </tr>
        <% end %>

      </table>
      <%= link_to "Home Page", "/", :class => "btn btn-success btn-lg" %>
    </div>