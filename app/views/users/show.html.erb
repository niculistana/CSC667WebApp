<p id="notice"><%= notice %></p>

<div class="container">
  <h1><%= @user.email %></h1>
</div>

<div class="container">
  <h2>Live game</h2>
</div>
<div class="container">
  <%= link_to "Create Game", new_game_path, class: "btn btn-primary pull-right" %>
    <% @games.each do |game| %>
      <h3><%= game.name %></h3>
      <p>Turn: <%= game.turn %>, Completed: <%= (game.completed==1) ? "Yes" : "No" %>
        <span class="btn-group pull-right">
          <%= link_to "Show Game", :play, class: "btn btn-secondary btn-sm" %>
          <%= link_to "Edit Game", edit_game_path(game), class: "btn btn-secondary btn-sm"  %>
          <%= link_to "Delete Game", game, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary btn-sm"  %>
        </span>
      </p>
    <% end %>
</div>
